<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tech.seoul.health.models.HealthDao">
        <!-- 위치 기반 검색 쿼리 -->
    <select id="findHospitalWithRadius" resultType="com.tech.seoul.health.models.HospitalDto">
            SELECT *
            FROM hosp_info
            WHERE (
            6371 * acos(
            cos(radians(#{lat})) *
            cos(radians(hosp_lat)) *
            cos(radians(hosp_lon) - radians(#{lon})) +
            sin(radians(#{lat})) *
            sin(radians(hosp_lat))
            )
            ) <![CDATA[<=]]> #{radius}
            <if test="keyword != null and keyword != ''">
                AND hosp_name LIKE CONCAT('%', #{keyword}, '%')
            </if>
    </select>

        <!--  기반 검색 쿼리 -->
    <select id="findByKeyword" resultType="com.tech.seoul.health.models.HospitalDto">
            SELECT *
            FROM hosp_info
            <where>
            <if test="keyword != null and keyword != ''">
                hosp_name LIKE CONCAT('%', #{keyword}, '%')
            </if>
            </where>
    </select>
</mapper>